      max-width: 600px;
      margin: auto;
    }
    .form-group label {
      font-weight: bold;
    }
    .toggle-password {
      cursor: pointer;
      color: #007bff;
      margin-top: 5px;
      display: inline-block;
    }
    .btn-primary {
      width: 100%;
    }
  </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
