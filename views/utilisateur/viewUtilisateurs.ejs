      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-primary">List of Utilisateurs</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/home1">Home</a></li>
              <li class="breadcrumb-item"><a href="/utilisateurs">Utilisateurs</a></li>
              <li class="breadcrumb-item active">List of Utilisateurs</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <a href="/utilisateurs/addUtilisateur" class="btn btn-primary mb-3">Add New Utilisateur</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Téléphone</th>
                    <th>Email</th>
                    <th>Charge</th>
                    <th>Fonction</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
              <% if (utilisateurs.length > 0) { %>
                  <% 
                    const activeUtilisateurs = utilisateurs.filter(utilisateur => utilisateur.statut === 1);
                    const disabledUtilisateurs = utilisateurs.filter(utilisateur => utilisateur.statut === 0);
                    const sortedUtilisateurs = activeUtilisateurs.concat(disabledUtilisateurs);
                  %>
                  <% sortedUtilisateurs.forEach(utilisateur => { %>
                      <tr class="<%= utilisateur.statut === 0 ? 'disabled-row' : '' %>">
                          <td><%= utilisateur.id %></td>
                          <td><%= utilisateur.nom %></td>
                          <td><%= utilisateur.tell %></td>
                          <td><%= utilisateur.email %></td>
                          <td><%= utilisateur.chargeT %></td>
                          <td><%= utilisateur.fonction %></td>
                          <td>
                              <a href="/utilisateurs/<%= utilisateur.id %>/view" class="btn btn-info btn-sm">View</a>
                              <a href="/utilisateurs/<%= utilisateur.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                              <form action="/utilisateurs/<%= utilisateur.id %>/toggle" method="POST" style="display:inline;">
                                  <button type="submit" class="btn <%= utilisateur.statut === 1 ? 'btn-danger' : 'btn-success' %> btn-sm">
                                      <%= utilisateur.statut === 1 ? 'Disable' : 'Enable' %>
                                  </button>
                              </form>
                          </td>
                      </tr>
                  <% }); %>
              <% } else { %>
                  <tr>
                      <td colspan="7">No utilisateurs found.</td>
                  </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </section>
