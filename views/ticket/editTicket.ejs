    <!-- Main content -->
    <section class="content">
      <div class="container bg-white p-4 shadow-sm rounded" style="max-width: 600px;">
        <h1 class="text-center text-primary mb-4">Edit Ticket</h1>
        <form action="/tickets/<%= ticket.id %>/edit" method="POST">
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th><label for="description">Description:</label></th>
                        <td><input type="text" class="form-control" id="description" name="description" value="<%= ticket.description %>" required></td>
                    </tr>
                    <tr>
                        <th><label for="datereception">Date Reception:</label></th>
                        <td><input type="datetime-local" class="form-control" id="datereception" name="datereception" value="<%= ticket.datereception %>"></td>
                    </tr>
                    <tr>
                        <th><label for="notes">Notes:</label></th>
                        <td><input type="text" class="form-control" id="notes" name="notes" value="<%= ticket.notes %>"></td>
                    </tr>
                    <tr>
                        <th><label for="client_nom">Client Name:</label></th>
                        <td><input type="text" class="form-control" id="client_nom" name="client_nom" value="<%= ticket.client_nom %>" required></td>
                        <!-- Hidden input for client_id -->
                        <input type="hidden" id="client_id" name="client_id" value="<%= ticket.client_id %>">
                    </tr>
                    <tr>
                        <th><label for="support_id">Support ID:</label></th>
                        <td><input type="text" class="form-control" id="support_id" name="support_id" value="<%= ticket.support_id %>"></td>
                    </tr>
                    <tr>
                        <th><label for="demandeur_nom">Demandeur Name:</label></th>
                        <td><input type="text" class="form-control" id="demandeur_nom" name="demandeur_nom" value="<%= ticket.demandeur_nom %>" required></td>
                        <!-- Hidden input for demandeure_id -->
                        <input type="hidden" id="demandeure_id" name="demandeure_id" value="<%= ticket.demandeure_id %>">
                    </tr>
                    <tr>
                        <th><label for="etat">Etat:</label></th>
                        <td>
                            <select class="form-control" id="etat" name="etat" required>
                                <option value="en cours" <%= ticket.etat === "en cours" ? "selected" : "" %>>En cours</option>
                                <option value="resolu" <%= ticket.etat === "resolu" ? "selected" : "" %>>Resolu</option>
                                <option value="en attente" <%= ticket.etat === "en attente" ? "selected" : "" %>>En attente</option>
                                <option value="necessite une intervention" <%= ticket.etat === "necessite une intervention" ? "selected" : "" %>>Necessite une intervention</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th><label for="priorite">Priorite:</label></th>
                        <td>
                            <select class="form-control" id="priorite" name="priorite" required>
                                <option value="haute" <%= ticket.priorite === "haute" ? "selected" : "" %>>Haute</option>
                                <option value="moyenne" <%= ticket.priorite === "moyenne" ? "selected" : "" %>>Moyenne</option>
                                <option value="basse" <%= ticket.priorite === "basse" ? "selected" : "" %>>Basse</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th><label for="statut">Status:</label></th>
                        <td>
                            <select class="form-control" id="statut" name="statut" required>
                                <option value="1" <%= ticket.statut == 1 ? 'selected' : '' %>>Active</option>
                                <option value="0" <%= ticket.statut == 0 ? 'selected' : '' %>>Inactive</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>

               <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="/tickets" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
