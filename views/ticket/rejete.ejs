    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .content-wrapper {
            background-color: #f4f4f4;
        }
        .container {
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            width: 80%;
            max-width: 1000px; /* Adjusted for better responsiveness */
        }
        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }
        button {
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            width: 100%;
        }
        button:hover {
            background-color: #218838;
        }
        .table th, .table td {
            text-align: center; /* Center align table text */
        }
        .navbar-nav .nav-link {
            padding: .5rem 1rem;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="/home1" class="nav-link">Home</a>
      </li>
    </ul>
    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <a class="nav-link" data-widget="navbar-search" href="#" role="button">
          <i class="fas fa-search"></i>
        </a>
        <div class="navbar-search-block">
          <form class="form-inline">
            <div class="input-group input-group-sm">
              <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
              <div class="input-group-append">
                <button class="btn btn-navbar" type="submit">
                  <i class="fas fa-search"></i>
                </button>
                <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>
          </form>
        </div>
      </li>
    </ul>
  </nav>

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <li class="nav-item">
            <a href="#" class="nav-link">
              <i class="nav-icon fas fa-table"></i>
              <p>
                Tables
                <i class="fas fa-angle-left right"></i>
              </p>
            </a>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="/tickets" class="nav-link">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Tickets List</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/clients" class="nav-link">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Clients Table</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/demandeurs" class="nav-link">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Demandeur Table</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/utilisateurs" class="nav-link">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Users Table</p>
                </a>
              </li>
            </ul>
          </li>
          <li class="nav-item">
            <a href="/utilisateurs/userRole" class="nav-link">
              <i class="far fa-circle nav-icon"></i>
              <p>Users role</p>
            </a>
          </li>
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/home1">Home</a></li>
              <li class="breadcrumb-item"><a href="/tickets">Tickets </a></li>
              <li class="breadcrumb-item"><a href="/tickets/en-attente">Tickets en attente</a></li>
          <li class="breadcrumb-item"><a href="/tickets/resolu">Tickets resolu</a></li>
          <li class="breadcrumb-item"><a href="/tickets/rejete">Tickets rejete</a></li>
          <li class="breadcrumb-item"><a href="/tickets/necessiteIntervention">Tickets besoin intervention</a></li>
          <li class="breadcrumb-item"><a href="/tickets/en-cours">Tickets en cours</a></li>

            </ol>
          </div>
        </div>
      </div>
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="container">
        <h1 class="mb-4">Tickets Rejete</h1>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Description</th>
              <th>Date Reception</th>
              <th>Etat</th>
              <th>Priorite</th>
              <th>Client</th>
              <th>Demandeur</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% tickets.forEach(ticket => { %>
              <tr>
                <td><%= ticket.id %></td>
                <td><%= ticket.description %></td>
                <td><%= ticket.datereception %></td>
                <td><%= ticket.etat %></td>
                <td><%= ticket.priorite %></td>
                <td><%= ticket.client_nom %></td>
                <td><%= ticket.demandeur_nom %></td>
                <td>
                    <a href="/tickets/<%= ticket.id %>/view" class="btn btn-info btn-sm">View</a>
                    <a href="/tickets/<%= ticket.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/tickets/<%= ticket.id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this ticket?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <footer class="main-footer">
