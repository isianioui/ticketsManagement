<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Ticket</title>
    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
