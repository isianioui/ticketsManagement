    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container">
        <a href="/tickets/addTicket" class="btn btn-primary mb-3">Add New Ticket</a>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Description</th>
                    <th>Date Reception</th>
                    <th>Notes</th>
                    <th>Client</th>
                    <th>Demandeur</th>
                    <th>Etat</th>
                    <th>Priorite</th>
                    <th>Description Probleme</th>
                    <th>Signalerprobleme Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% tickets.forEach(ticket => { %>
                    <tr>
                        <td><%= ticket.id %></td>
                        <td><%= ticket.description %></td>
                        <td><%= new Date(ticket.datereception).toLocaleString() %></td>
                        <td><%= ticket.notes %></td>
                        <td><%= ticket.client_nom %></td>
                        <td><%= ticket.demandeur_nom %></td>
                        <td><%= ticket.etat %></td>
                        <td><%= ticket.priorite %></td>
                        <td><%= ticket.signalerprobleme_description %></td>
                        <td><%= ticket.signalerprobleme_type %></td>
                        <td>
                            <a href="/tickets/<%= ticket.id %>/view" class="btn btn-info btn-sm">View</a>
                            <a href="/tickets/<%= ticket.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/tickets/<%= ticket.id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this ticket?');">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
      </div>
    </section>
